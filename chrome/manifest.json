{
  "manifest_version": 2,

  "name": "Vernam Cipher",
  "description": "This extension generates domain specific password via Vernam Cipher",
  "version": "0.4",

  "browser_action": {
    "default_icon": {
      "16": "icon_16.png",
      "32": "icon_32.png",
      "64": "icon_64.png",
      "128": "icon_128.png"
    },
    "default_title": "Vernam Cipher",
    "default_popup": "index.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16": "icon_16.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}